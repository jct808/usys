<div class="row mb-3">
  <div class="col text-left">
    <h3><%= t_title(:index) %></h3>
  </div>
  <div class="col text-right">
    <%= link_to t_title(:new), new_supplier_path, :class => "btn btn-primary" %>
  </div>
</div>
<table class="table table-striped table-hover" id="myTable">
  <thead class="thead-dark">
    <tr>
      <th><%= t_attr("name") %></th>
      <th><%= t_attr("phone") %><br>
        <%= t_attr("sales") %></th>
      <th width="40%"></th>
    </tr>
  </thead>
  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to supplier.name, supplier %><br>
          <%= supplier.id %></td>
        <td><%= supplier.phone %><br>
          <%= supplier.sales %></td>
        <td>
          <%= link_to t_action(:edit), edit_supplier_path(supplier), class: "btn btn-primary" %>
          <%= link_to t_action(:delete), supplier, method: :delete, data: { confirm: "你確定要刪除此項廠商資料嗎?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
