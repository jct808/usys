<div class="row mb-3">
  <div class="col text-left">
    <%= link_to t_action(:back), suppliers_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="card mb-3">
  <div class="card-header">
    <div class="row">
      <div class="col text-left">
        <h3><%= @supplier.name %></h3>
      </div>
      <div class="col text-right">
        <%= link_to t_action(:edit), edit_supplier_path(@supplier), class: "btn btn-primary" %>
        <%= link_to t_action(:delete), @supplier, method: :delete, data: { confirm: "你確定要刪除此項商品嗎?" },  class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <table class="table table-hover">
          <thead>
            <tr>
              <h2>廠商資料</h2>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th style="width: 100px;"><strong><%= t_attr("name") %></strong></th>
              <td><%= @supplier.name %></td>
            </tr>
            <tr>
              <th><strong><%= t_attr("phone") %></strong></th>
              <td><%= @supplier.phone %></td>
            </tr>
            <tr>
              <th style="width: 100px;"><strong><%= t_attr("sales") %></strong></th>
              <td><%= @supplier.sales %></td>
            </tr>
            <tr>
              <th style="width: 100px;"><strong><%= t_attr("fax") %></strong></th>
              <td><%= @supplier.fax %></td>
            </tr>
            <tr>
              <th style="width: 100px;"><strong><%= t_attr("address") %></strong></th>
              <td><%= @supplier.address %></td>
            </tr>
            <tr>
              <th style="width: 100px;"><strong><%= t_attr("status") %></strong></th>
              <td><%= @supplier.status %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="card-footer text-muted">
    <%= "備註:  #{@supplier.comment}" %>
  </div>
</div>
