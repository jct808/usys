<div class="row mb-2">
  <div class="col text-left">
    <h4 class><%= t_title(:index) %></h4>
  </div>
  <div class="col text-right">
    <%= link_to t_title(:new), new_category_path, :class => "btn btn-primary" %>
  </div>
</div>
<table class="table table-striped table-hover" id="myTable">
  <thead class="thead-dark">
    <tr>
      <th><%= t_attr("name") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category %></td>
        <td>
          <%= link_to t_action(:edit), edit_category_path(category), class: "btn btn-primary" %>
          <%= link_to t_action(:delete), category, method: :delete, data: { confirm: "你確定要刪除此項資料嗎?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
