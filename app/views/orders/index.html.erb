<div class="row mb-3">
  <div class="col text-left">
    <h3><%= t_title(:index) %></h3>
  </div>
  <div class="col text-right">
    <%= link_to t_title(:new), new_order_path, :class => "btn btn-primary" %>
  </div>
</div>
<table class="table table-striped table-hover" id="myTable">
  <thead class="thead-dark">
    <tr>
      <th><%= t_attr("customer") %></th>
      <th><%= t_attr("order_date") %></th>
      <th width="40%"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.customer, order %><br>
          <%= "#{order.phone} - #{truncate(order.address, length: 10)}" %></td>
        <td><%= order.order_date %></td>
        <td>
          <%= link_to t_action(:edit), edit_order_path(order), class: "btn btn-primary" %>
          <%= link_to t_action(:delete), order, method: :delete, data: { confirm: "你確定要刪除此項廠商資料嗎?" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
