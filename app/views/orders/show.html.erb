<div class="row mb-3">
  <div class="col text-left">
    <%= link_to t_action(:back), orders_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="card mb-3">
  <div class="card-header">
    <div class="row">
      <div class="col text-left">
        <h3>承接業務：<%= @order.user.name %></h3>
      </div>
      <div class="col text-right">
        <%= link_to t_action(:edit), edit_order_path(@order), class: "btn btn-primary" %>
        <%= link_to t_action(:delete), @order, method: :delete, data: { confirm: "你確定要刪除此項商品嗎?" },  class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col">
        <table class="table table-hover">
          <thead>
            <tr>
              <h2><%= @order.customer %></h2>
            </tr>
            <tbody>
              <tr>
                <th><strong><%= t_attr("phone") %></strong></th>
                <td><%= @order.phone %></td>
              </tr>
              <tr>
                <th style="width: 100px;"><strong><%= t_attr("address") %></strong></th>
                <td><%= @order.address %></td>
              </tr>
              <tr>
                <th style="width: 100px;"><strong><%= t_attr("total") %></strong></th>
                <td><%= @order.total %></td>
              </tr>
              <tr>
                <th style="width: 100px;"><strong><%= t_attr("address") %></strong></th>
                <td><%= @order.shipping_date %></td>
              </tr>
              <tr>
                <th style="width: 100px;"><strong><%= t_attr("status") %></strong></th>
                <td><%= @order.status %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted">
      <%= "備註:  #{@order.comment}" %>
    </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= t_attr("product") %></th>
        <th></th>
        <th><%= t_attr("quantity") %></th>
        <th><%= t_attr("unit_price") %></th>
        <th><%= t_attr("total") %></th>
        <th><%= t_attr("comment") %></th>
      </tr>
    </thead>
    <tbody>
      <% @order.items.each do |item|%>
        <tr>
          <td><%= item.product.name if item.product.present?%></td>
          <td><%= image_tag item.product.image.url(:thumb) %></td>
          <td><%= item.quantity %></td>
          <td><%= item.unit_price %></td>
          <td><%= item.total %></td>
          <td><%= item.comment %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
